{
  "name": "@hkube/etcd",
  "version": "5.0.0",
  "description": "etcd infrastructure build for the hkube project",
  "main": "index.js",
  "scripts": {
    "lint": "./node_modules/eslint/bin/eslint.js .",
    "test": "NODE_ENV=test ./node_modules/mocha/bin/_mocha tests --colors --recursive --exit",
    "test:cov": "NODE_ENV=test ./node_modules/nyc/bin/nyc.js --exclude=bootstrap.js --reporter=html --reporter=text --reporter=lcov mocha tests --colors --recursive --exit",
    "coverage": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "build": "npm publish"
  },
  "pre-commit": {
    "run": [
      "lint",
      "test"
    ]
  },
  "author": "maty zisserman",
  "license": "ISC",
  "dependencies": {
    "ajv": "^6.10.0",
    "etcd3": "^0.2.11",
    "lodash.merge": "^4.6.1",
    "moment": "^2.24.0",
    "string-template": "^1.0.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "await-delay": "^1.0.0",
    "await-done": "^1.0.10",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.15.3",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "^2.16.0",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "pre-commit": "^1.2.2",
    "sinon": "^7.3.1"
  }
}
